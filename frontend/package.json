{
  "name": "ick-frontend",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",

    "cap:init": "cap init Ick com.ick.app --web-dir dist",
    "cap:sync": "cap sync",

    "android:add": "cap add android",
    "android:sync": "npm run build && cap sync android",
    "android:open": "cap open android",
    "android:run": "npm run build && cap sync android && cap run android",
    "android:build": "npm run build && cap sync android && cd android && ./gradlew assembleRelease",

    "ios:add": "cap add ios",
    "ios:sync": "npm run build && cap sync ios",
    "ios:open": "cap open ios",
    "ios:run": "npm run build && cap sync ios && cap run ios",

    "native:setup": "npm run build && cap add android && cap add ios && cap sync",
    "native:dev": "VITE_NATIVE=true vite"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.0",
    "@capacitor/app": "^5.0.7",
    "@capacitor/camera": "^5.0.9",
    "@capacitor/core": "^5.7.0",
    "@capacitor/haptics": "^5.0.7",
    "@capacitor/ios": "^5.7.0",
    "@capacitor/keyboard": "^5.0.8",
    "@capacitor/preferences": "^5.0.7",
    "@capacitor/push-notifications": "^5.0.7",
    "@capacitor/share": "^5.0.7",
    "@capacitor/splash-screen": "^5.0.7",
    "@capacitor/status-bar": "^5.0.7",
    "@capacitor-mlkit/barcode-scanning": "^5.4.0",
    "@zxing/library": "^0.21.3",
    "html5-qrcode": "^2.3.8",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "recharts": "^2.12.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.7.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.0",
    "vite-plugin-pwa": "^0.19.0",
    "workbox-window": "^7.0.0"
  }
}
